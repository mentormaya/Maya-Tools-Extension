{
  "manifest_version": 3,
  "name": "Maya Tools - Easing your daily needs!",
  "short_name": "Maya Tools",
  "version": "1.0.0",
  "description": "Maya Tools is the collection of tools and techniques that we do need on our daily basis for the various works.",
  "chrome_url_overrides": {
    "newtab": "pages/new.html"
  },
  "background": {
    "service_worker": "/assets/js/background.js",
    "type": "module"
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "/pages/downloader.html",
    "default_icon": {
      "16": "/assets/icons/maya_tools/icon16.png",
      "32": "/assets/icons/maya_tools/icon32.png",
      "48": "/assets/icons/maya_tools/icon64.png",
      "128": "/assets/icons/maya_tools/icon128.png"
    },
    "title": "Maya Tools"
  },
  "icons": {
    "16": "/assets/icons/maya_tools/icon16.png",
    "32": "/assets/icons/maya_tools/icon32.png",
    "48": "/assets/icons/maya_tools/icon64.png",
    "128": "/assets/icons/maya_tools/icon128.png"
  },
  "options_page": "/pages/options.html"
}
